@{
    ViewBag.Title = "黄金罗盘";
}
<style>
    .backgroundcolor {
        background-color: #E62629;
    }

    .fontcolor {
        color: #E62629;
    }


    .backgroundcolor a {
        color: white;
    }

        .backgroundcolor a:hover {
            color: white;
            text-decoration: underline;
            -moz-text-decoration-line: underline;
            text-decoration-line: underline;
        }
</style>

<div class="container-fluid" style="font-weight:bold">
    <div class="row backgroundcolor" style="min-height:200px;color:white">
        @{
            //登陆
            if (Request.IsAuthenticated)
            {
                <div style="padding-left:30px;min-height:50px;line-height:50px">
                    昨日利息（元）
                </div>
                <div style="font-size:3.5em;min-height:150px;text-align:center;">
                    @ViewBag.Interest
                </div>
            }
            else
            {
                <div style="min-height:200px;line-height:200px;font-size:2em;text-align:center;">
                    <a href="@Url.Action("Login","Account")">登陆</a> &nbsp; / &nbsp;<a href="@Url.Action("Register","Account")">注册</a>
                </div>
            }
        }
    </div>
    <div class="row" style="box-shadow: rgba(230,38,41,0.4) 0px 5px 5px inset;background-color:#FEFEFE">
        <div style="padding-left:30px;min-height:50px;line-height:50px">
            我的黄金
        </div>
        <div class="fontcolor" style="font-size:3.5em;text-align:center;border-bottom:1px solid #D3D4D4">
            @{
                string text = "0.00";
                if (Request.IsAuthenticated)
                {
                    <a href="@Url.Action("Sell")" class="btn-block fontcolor">@text</a>
                }
                else
                {
                    @text
                }
            }
        </div>
    </div>
    <div class="row" style="min-height:70px;text-align:center;line-height:70px;background-color:#FEFEFE">
        <div class="col-xs-4">
            <a href="@Url.Action("Buy")" class="btn">买入</a>
        </div>
        <div class="col-xs-4">
            <a href="@Url.Action("Sell")" class="btn">卖出</a>
        </div>
        <div class="col-xs-4">
            <a href="@Url.Action("SaveKing")" class="btn">存金</a>
        </div>
    </div>
    <div class="row" style="min-height:150px">
        <div class="fontcolor" style="padding-left:30px;min-height:50px;line-height:50px">
            昨日收益
        </div>
        <div style="padding-left:30px;font-size:1em;">
            @ViewBag.Profit
        </div>
        <div class="fontcolor" style="padding-left:30px;min-height:50px;line-height:50px">
            利息
        </div>
        <div style="padding-left:30px;font-size:1em;">
            2.3%
        </div>
    </div>
</div>
@if (Request.IsAuthenticated)
{
    @section pagespecific{
        <script>
            $(function () {
                setInterval(function () {
                    $.get("@Url.Action("GetGold")", function (result) {
                        $scope.text = result.Profit;
                    });
                }, 1000);
            });
        </script>
    }
}

