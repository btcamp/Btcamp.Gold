<div class="modal fade" id="accountDetails" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    <img src="/content/img/logo.png" width="150" alt="黄金罗盘">
                </h4>
            </div>
            <div class="modal-body no-padding">
                <form id="login-form" class="smart-form">
                    <fieldset>
                        <section>
                            <div class="row">
                                <label class="label col col-3">姓名</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        <input type="text" name="name" id="Name" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">手机号</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-phone"></i>
                                        <input type="text" name="name" id="PhoneNumber" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">邮箱</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-envelope-o"></i>
                                        <input type="text" id="Email" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">身份证</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-credit-card"></i>
                                        <input type="text" id="IDNumber" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">开户行</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-bank"></i>
                                        <input type="text" id="Bank" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">开户行分行</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-bank"></i>
                                        <input type="text" id="BankBranch" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">银行卡号</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-file-o"></i>
                                        <input type="text" id="BankNumber" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">MT4账户</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        <input type="text" id="MT4Account" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">MT4登陆密码</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        <input type="text" id="MT4Pwd" disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                        <section>
                            <div class="row">
                                <label class="label col col-3">MT4投资者密码</label>
                                <div class="col col-9">
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        <input type="text" id="MT4InvestorPwd"  disabled="disabled" />
                                    </label>
                                </div>
                            </div>
                        </section>
                    </fieldset>
                    <footer>
                        @*<button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>
                            保存
                        </button>*@
                        <a href="@Url.Action("Index")" class="btn btn-default" type="reset">取消</a>
                    </footer>
                </form>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>