@model AccountViewModel

@{
    ViewBag.Title = "编辑账户";
    //Html.EnableClientValidation();
    //Html.EnableUnobtrusiveJavaScript();
}

<div id="content">
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                        <h2>编辑账户</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form class="form-horizontal" action="@Url.Action("Modify")" method="post" enctype="multipart/form-data">
                                <fieldset>
                                    <div class="form-group">
                                        @Html.LabelFor(e => e.PhoneNumber, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                                @Html.TextBoxFor(e => e.PhoneNumber, new { @class = "form-control", placeholder = "请输入手机号", @disabled = "disabled" })
                                            </div>
                                            @Html.ValidationMessageFor(e => e.PhoneNumber)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(e => e.Email, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                                @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "请输入邮箱" })
                                            </div>

                                            @Html.ValidationMessageFor(e => e.Email)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(e => e.Name, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                @Html.TextBoxFor(e => e.Name, new { @class = "form-control", placeholder = "请输入姓名" })
                                            </div>

                                            @Html.ValidationMessageFor(e => e.Name)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(e => e.IDNumber, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                                @Html.TextBoxFor(e => e.IDNumber, new { @class = "form-control", placeholder = "请输入身份证号", maxlength = "18" })
                                            </div>

                                            @Html.ValidationMessageFor(e => e.IDNumber)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(e => e.Bank, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-bank"></i></span>
                                                @Html.TextBoxFor(e => e.Bank, new { @class = "form-control", placeholder = "请输入开户行" })
                                            </div>

                                            @Html.ValidationMessageFor(e => e.Bank)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(e => e.BankBranch, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-bank"></i></span>
                                                @Html.TextBoxFor(e => e.BankBranch, new { @class = "form-control", placeholder = "请输入开户行分行" })
                                            </div>

                                            @Html.ValidationMessageFor(e => e.BankBranch)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(e => e.BankNumber, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-file-o"></i></span>
                                                @Html.TextBoxFor(e => e.BankNumber, new { @class = "form-control", placeholder = "请输入银行卡号" })
                                            </div>

                                            @Html.ValidationMessageFor(e => e.BankNumber)
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <input type="hidden" name="ReturnUlr" value="@ViewBag.Url" />
                                            @Html.HiddenFor(e => e.Id)
                                            @Html.HiddenFor(e => e.PhoneNumber)
                                            @Html.HiddenFor(e => e.MT4Account)
                                            @Html.HiddenFor(e => e.LoginPwd)
                                            @Html.HiddenFor(e => e.MT4InvestorPwd)
                                            @Html.HiddenFor(e => e.MT4Pwd)
                                            @Html.HiddenFor(e => e.Interest)
                                            @Html.HiddenFor(e => e.SumInterest)
                                            @Html.HiddenFor(e => e.Profit)
                                            @Html.HiddenFor(e => e.IsLock)
                                            <a href="@Url.Action("Index")" class="btn btn-default" type="reset">取消</a>
                                            <button class="btn btn-primary" type="submit">
                                                <i class="fa fa-save"></i>
                                                保存
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
            </article>
        </div>

    </section>
    <!-- end widget grid -->
</div>


@section pagespecific{
    <script>
        $(function () {


        });
    </script>
}